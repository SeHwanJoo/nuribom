<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="streaming.test.org.togethertrip.ui.SigninActivity"
    android:background="@drawable/login_background">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_logo"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"></LinearLayout>

    <LinearLayout
        android:id="@+id/input_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/login_email"/>
            <RelativeLayout
                android:id="@+id/input_email_layout"
                android:layout_width="200dp"
                android:layout_height="30dp">
                <EditText
                    android:id="@+id/input_email"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:hint="이메일을 입력하세요"
                    android:textSize="14sp"
                    android:textColor="#1D1D1D"
                    android:textColorHint="#686868"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_email"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/password_underline"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/login_password"/>
            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="30dp">
                <EditText
                    android:id="@+id/input_password"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:hint="비밀번호를 입력하세요"
                    android:textSize="14sp"
                    android:textColor="#1D1D1D"
                    android:textColorHint="#686868"
                    android:background="@null"
                    android:inputType="textPassword" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_password"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/password_underline"/>
            </RelativeLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_login"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_on"/>
        <ImageButton
            android:id="@+id/btn_signup"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:background="@drawable/join_join"/>
        <!--TODO 로그인, 회원가입 버튼 이미지 자체 크기가 다름 수정 요청해야함 -->
    </LinearLayout>

</RelativeLayout>
