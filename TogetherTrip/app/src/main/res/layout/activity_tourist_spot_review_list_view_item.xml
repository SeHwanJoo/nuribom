<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/review_txtbox_2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:padding="15dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1.8">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1">
            <ImageView
                android:layout_marginLeft="10dp"
                android:scaleType="matrix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mypage_profile_defalt"
                android:layout_centerInParent="true"
                android:layout_weight="1"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="7"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textview_trvi_userid"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="민승"
                android:layout_weight="5"
                android:layout_gravity="center"
                android:paddingLeft="15dp"
                android:textSize="16sp"
                android:textColor="#1D1D1D"/>
            <TextView
                android:id="@+id/textview_trvi_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="yyyy/mm/dd"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="#8C8C8C"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3">

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textview_trvi_content"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ReviewReviewReviewReviewReviewReviewReviewReviewReviewReviewReview"
            android:textSize="14sp"
            android:textColor="#1D1D1D"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="10"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <View
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@drawable/review_star"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textview_trvi_star"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:text="4.5"
            android:textSize="12sp"
            android:textColor="#8C8C8C"/>



        <ImageView
            android:src="@drawable/review_heart"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textview_trvi_heart"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:text="4"
            android:textSize="12sp"
            android:textColor="#8C8C8C" />


        <ImageView
            android:src="@drawable/review_image"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textview_trvi_picture"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:text="3"
            android:textSize="12sp"
            android:textColor="#8C8C8C" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/default_image"
            android:scaleType="matrix" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/default_image"
            android:scaleType="matrix" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/default_image"
            android:scaleType="matrix" />

    </LinearLayout>

</LinearLayout>